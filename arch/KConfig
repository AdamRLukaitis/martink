menu "Hardware"
	choice 
		prompt "Target Architechture"
		
		config AVR
			bool "Atmel AVR"
		
		config ARM
			bool "ARM"
		
		config XTENSA
			bool "Xtensa" 

		config NATIVE
			bool "Linux"
			help 
				Compile for linux
			
	endchoice 
		
	menu "Target Options"
		source arch/avr/KConfig
		source arch/arm/KConfig
		source arch/xtensa/KConfig
		source arch/linux/KConfig
	endmenu

		
endmenu
