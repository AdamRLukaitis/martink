menu "Hardware"
	config HAVE_UART 
		bool
	config HAVE_SPI 
		bool
	config HAVE_I2C 
		bool
	config HAVE_TIMER0
		bool
	config HAVE_TIMER1
		bool
	config HAVE_TIMER2
		bool
	config HAVE_PWM0
		bool
	config HAVE_PWM1
		bool
	config HAVE_PWM2
		bool
		
	choice 
		prompt "Processor family"
	
		config AVR
			bool "Atmel AVR"
		
		config STM32
			bool "STM32, ST Electronics"
		
		config SAM3
			bool "AT91SAM3"
			
		config NATIVE
			bool "Native"
			help 
				Attmept to compile code that will run on your current build system
			
	endchoice 
		
	menu "Processor options"
		source arch/m328p/KConfig
		source arch/stm32/KConfig
		source arch/sam3/KConfig
		source arch/native/KConfig
	endmenu
	
	config UART 
		depends on HAVE_UART
		default y
		bool "UART interface"
	
	config I2C
		depends on HAVE_I2C
		default y
		bool "I2C interface"
		
	config SPI
		depends on HAVE_SPI
		default y
		bool "SPI interface"
		
endmenu
