menu "Hardware"
	config HAVE_UART 
		bool
	config HAVE_UART0
		bool
	config HAVE_UART1
		bool
	config HAVE_SPI 
		bool
	config HAVE_TWI
		bool
	config HAVE_TWI0
		bool
	config HAVE_TWI1
		bool
	config HAVE_TWI2
		bool
	config HAVE_TIMER0
		bool
	config HAVE_TIMER1
		bool
	config HAVE_TIMER2
		bool
	config HAVE_PWM0
		bool
	config HAVE_PWM1
		bool
	config HAVE_PWM2
		bool
		
	choice 
		prompt "Processor family"
	
		config AVR
			bool "Atmel AVR"
		
		config ARM
			bool "ARM"
			
		config NATIVE
			bool "Native"
			help 
				Attmept to compile code that will run on your current build system
			
	endchoice 
		
	menu "Processor type"
		source arch/avr/m328p/KConfig
		source arch/arm/stm32/KConfig
		source arch/arm/KConfig
		source arch/native/KConfig
	endmenu
	
	config UART 
		depends on HAVE_UART
		default y
		bool "UART interface"
		
	config I2C
		depends on HAVE_TWI
		default y
		bool "TWI interface"
		
	config SPI
		depends on HAVE_SPI
		default y
		bool "SPI interface"
		
endmenu
